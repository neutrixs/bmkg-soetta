{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --preset Ninja-Release-x64 && cd build/Ninja-Release-x64 && ninja",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-debug",
            "type": "shell",
            "command": "cmake --preset Ninja-Debug-x64 && ninja -C build/Ninja-Debug-x64",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Run RadarWorker",
            "type": "shell",
            "command": "${workspaceFolder}/build/Ninja-Release-x64/RadarWorker/RadarWorker",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": [
                "build"
            ]
        }
    ]
}